# MongoDB Configuration
MONGO_URI=mongodb://gesturebridgeuser:your_password@localhost:27017/gesturebridge

# JWT Configuration
JWT_SECRET_KEY=change_this_to_a_secure_secret_key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days in seconds

# Server Configuration
FLASK_APP=backend/app.py
FLASK_ENV=development  # Change to 'production' for production environment
FLASK_DEBUG=1  # Set to 0 in production
PORT=5000
HOST=0.0.0.0

# ML Model Configuration
MODEL_PATH=backend/model/saved_model
MODEL_VERSION=2.0
CONFIDENCE_THRESHOLD=0.85

# Video Processing
MAX_FRAME_SIZE=640x480
MAX_FPS=30
VIDEO_QUALITY=medium  # low, medium, high

# Security
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
RATE_LIMIT=100  # requests per minute
MAX_CONTENT_LENGTH=16777216  # 16MB max file size

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ENABLE_FILE_LOGGING=true

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_SENDER=noreply@gesturebridge.ai

# Feature Flags
ENABLE_STREAMING=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_MULTI_LANGUAGE=true

# Performance
MAX_WORKERS=4
THREAD_POOL_SIZE=8
CONNECTION_TIMEOUT=30
READ_TIMEOUT=30

# Development Only (remove in production)
DEVELOPMENT_MODE=true
MOCK_ML_MODEL=false
DISABLE_AUTH=false
